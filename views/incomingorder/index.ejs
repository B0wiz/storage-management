    <script>
        // script for select warehouse
        const checkboxes = document.querySelectorAll('#Selectwarehouse');
        var selectedWarehouses = [];
        checkboxes.forEach((checkbox) => {
            checkbox.addEventListener('change', () => {
                if (checkbox.checked) {
                    selectedWarehouses.push(checkbox.value);
                    const selected = selectedWarehouses.map(id => `[id="${id}"]`).join(',')+ ', [id="header"]';
                    const show = document.querySelectorAll(selected);
                    const hide = document.querySelectorAll(`tr:not(${selected})`);
                    console.log(selected)
                    hide.forEach((element) => {
                            element.classList.add('hidden');
                    });
                    show.forEach((element) => {
                            element.classList.remove('hidden');
                    });
                } else {
                    const index = selectedWarehouses.indexOf(checkbox.value);
                    if (index !== -1) {
                        selectedWarehouses.splice(index, 1);
                    }
                    if(selectedWarehouses.length === 0){
                        const unhide = document.querySelectorAll(`tr`);
                        unhide.forEach((element) => {
                            element.classList.remove('hidden');
                        });
                    }else{
                        var unselected = selectedWarehouses.map(id => `[id="${id}"]`).join(',')+ ', [id="header"]';
                        const hide = document.querySelectorAll(`tr:not(${unselected})`);
                        hide.forEach((element) => {
                            element.classList.add('hidden');
                        });
                    }
                }
                console.log(selectedWarehouses);
            });
        });

        // script showing text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700
        const pages = document.querySelectorAll('#page');
        const url = window.location.href;
        const paramValue = url.split('?')[0].split('/').pop(); 
        
        pages.forEach((page) => {
            var value = page.getAttribute('value');
            if(value == paramValue){

                page.classList.remove('text-gray-500');
                page.classList.remove('bg-white');
                page.classList.add('bg-gray-100');
                page.classList.add('text-gray-700');
